---
/**
 * Series Index Page
 *
 * @description Lists all post series with their descriptions and post counts.
 * Uses three-column dashboard layout.
 *
 * @route /series/
 */

import DashboardLayout from '@layouts/DashboardLayout.astro';
import { getSeriesWithCounts } from '@utils/content-utils';
import { getUrl } from '@utils/url-utils';
import { Icon } from 'astro-icon/components';
import { i18n, I18nKey } from '@i18n/index';

// Get all series with post counts
const allSeries = await getSeriesWithCounts();

// Filter to series that have posts
const seriesWithPosts = allSeries.filter((s) => s.postCount > 0);
---

<DashboardLayout
  title={i18n(I18nKey.series)}
  description={i18n(I18nKey.seriesDescription)}
>
  <div class="series-page">
    {/* Page Header */}
    <header class="page-header">
      <h1 class="page-title">{i18n(I18nKey.series)}</h1>
      <p class="page-subtitle">{i18n(I18nKey.seriesDescription)}</p>
    </header>

    {/* Series Grid */}
    <div class="series-grid">
      {seriesWithPosts.map((series) => (
        <a href={getUrl(`/series/${series.id}/`)} class="series-card">
          <div class="series-icon">
            <Icon name="material-symbols:library-books" class="icon" />
          </div>

          <div class="series-content">
            <h2 class="series-title">{series.title}</h2>
            <p class="series-description">{series.description}</p>

            <div class="series-meta">
              <span class:list={['status-badge', series.status]}>
                {series.status === 'completed'
                  ? i18n(I18nKey.completed)
                  : series.status === 'ongoing'
                    ? i18n(I18nKey.ongoing)
                    : i18n(I18nKey.paused)}
              </span>
              <span class="post-count">
                {series.postCount} {series.postCount === 1 ? i18n(I18nKey.postCount) : i18n(I18nKey.postsCount)}
              </span>
            </div>
          </div>

          <Icon name="material-symbols:arrow-forward" class="arrow-icon" />
        </a>
      ))}
    </div>

    {/* Empty State */}
    {seriesWithPosts.length === 0 && (
      <div class="empty-state">
        <Icon name="material-symbols:folder-open" class="empty-icon" />
        <p>{i18n(I18nKey.archiveEmpty)}</p>
      </div>
    )}
  </div>
</DashboardLayout>

<style>
  .series-page {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Page Header */
  .page-header {
    padding: 1.5rem;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
  }

  .page-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.375rem;
  }

  .page-subtitle {
    font-size: 0.9375rem;
    color: var(--text-secondary);
  }

  /* Series Grid */
  .series-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Series Card */
  .series-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .series-card:hover {
    border-color: oklch(var(--primary) / 0.3);
    box-shadow: 0 4px 12px oklch(var(--primary) / 0.08);
  }

  .series-card:hover .series-title {
    color: oklch(var(--primary));
  }

  .series-card:hover .arrow-icon {
    transform: translateX(4px);
    color: oklch(var(--primary));
  }

  .series-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 10px;
    background: oklch(var(--primary) / 0.1);
    flex-shrink: 0;
  }

  .series-icon .icon {
    width: 24px;
    height: 24px;
    color: oklch(var(--primary));
  }

  .series-content {
    flex: 1;
    min-width: 0;
  }

  .series-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
    transition: color 0.15s ease;
  }

  .series-description {
    font-size: 0.875rem;
    color: var(--text-secondary);
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .series-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.625rem;
  }

  .status-badge {
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    padding: 0.1875rem 0.5rem;
    border-radius: 4px;
    background: var(--btn-regular-bg);
    color: var(--text-tertiary);
  }

  .status-badge.completed {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
  }

  .status-badge.ongoing {
    background: oklch(var(--primary) / 0.1);
    color: oklch(var(--primary));
  }

  .post-count {
    font-size: 0.8125rem;
    color: var(--text-tertiary);
  }

  .arrow-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: var(--text-tertiary);
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    color: var(--text-secondary);
  }

  .empty-icon {
    width: 3rem;
    height: 3rem;
    color: var(--text-tertiary);
    margin-bottom: 1rem;
  }

  /* Responsive */
  @media (min-width: 768px) {
    .page-header {
      padding: 2rem;
    }

    .page-title {
      font-size: 2rem;
    }

    .series-card {
      padding: 1.5rem;
    }
  }
</style>
