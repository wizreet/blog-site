---
/**
 * Post Detail Page
 *
 * @description Displays a single blog post with full content.
 * Hides both sidebars for focused reading experience.
 * Supports encrypted posts with password protection.
 *
 * @route /posts/[slug]
 */

import { render } from 'astro:content';
import DashboardLayout from '@layouts/DashboardLayout.astro';
import PostMeta from '@components/misc/PostMeta.astro';
import SeriesNav from '@components/misc/SeriesNav.astro';
import License from '@components/misc/License.astro';
import Encryptor from '@components/Encryptor.astro';
import { getPostUrl } from '@utils/url-utils';
import { getSeriesById } from '@data/series';
import { getSortedPosts, type PostEntry } from '@utils/content-utils';
import { Icon } from 'astro-icon/components';

export async function getStaticPaths() {
  const posts = await getSortedPosts();

  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;

// Render the post content
const { Content, headings } = await render(post);

// Get series info if post is part of a series
const series = post.data.series ? getSeriesById(post.data.series.id) : null;

// Get all posts for prev/next navigation
const allPosts = await getSortedPosts();
const currentIndex = allPosts.findIndex((p) => p.id === post.id);
const prevPost = currentIndex > 0 ? allPosts[currentIndex - 1] : null;
const nextPost = currentIndex < allPosts.length - 1 ? allPosts[currentIndex + 1] : null;

// Get other posts in the same series
let seriesPosts: PostEntry[] = [];
if (series) {
  seriesPosts = allPosts.filter((p) => p.data.series?.id === series.id);
}

// Check if post is encrypted
const isEncrypted = post.data.encrypted && post.data.password;

// SEO
const { title, description, image } = post.data;
const imageUrl = image ? (typeof image === 'string' ? image : image.src) : '';

// Build optional props
type OptionalProps = {
  ogImage?: string;
  activeCategory?: string;
  activeSeries?: string;
};
const optionalProps: OptionalProps = {};
if (imageUrl) optionalProps.ogImage = imageUrl;
if (post.data.category) optionalProps.activeCategory = post.data.category;
if (post.data.series?.id) optionalProps.activeSeries = post.data.series.id;
---

<DashboardLayout
  title={title}
  description={description}
  url={getPostUrl(post.id)}
  headings={headings}
  activePost={post.id}
  hideLeftSidebar={true}
  hideRightSidebar={true}
  {...optionalProps}
>
  <article class="card-base overflow-hidden">
    <!-- Post Header -->
    <header class="border-b border-[var(--border-color)] p-6 md:p-8">
      <h1 class="text-3xl font-bold text-[var(--text-primary)] md:text-4xl">
        {title}
      </h1>

      {description && <p class="mt-3 text-lg text-[var(--text-secondary)]">{description}</p>}

      <div class="mt-4">
        <PostMeta post={post} />
      </div>
    </header>

    <!-- Featured Image (if present) -->
    {
      imageUrl && (
        <div class="aspect-video overflow-hidden">
          <img src={imageUrl} alt={title} class="h-full w-full object-cover" loading="eager" />
        </div>
      )
    }

    <!-- Post Content -->
    <div class="p-6 md:p-8">
      {isEncrypted ? (
        <Encryptor password={post.data.password}>
          <div class="prose prose-lg max-w-none dark:prose-invert">
            <Content />
          </div>
        </Encryptor>
      ) : (
        <div class="prose prose-lg max-w-none dark:prose-invert">
          <Content />
        </div>
      )}
    </div>

    <!-- License -->
    <div class="border-t border-[var(--border-color)] p-6 md:p-8">
      <License post={post} />
    </div>
  </article>

  <!-- Series Navigation (if part of series) -->
  {series && seriesPosts.length > 1 && (
    <div class="mt-6">
      <SeriesNav series={series} posts={seriesPosts} currentSlug={post.id} />
    </div>
  )}

  <!-- Post Navigation (Prev/Next) -->
  {(prevPost || nextPost) && (
    <nav class="post-navigation mt-6" aria-label="Post navigation">
      <div class="nav-grid">
        {prevPost ? (
          <a href={getPostUrl(prevPost.id)} class="nav-link prev">
            <span class="nav-label">
              <Icon name="material-symbols:arrow-back" class="nav-icon" />
              <span>Previous</span>
            </span>
            <span class="nav-title">{prevPost.data.title}</span>
          </a>
        ) : (
          <div class="nav-placeholder"></div>
        )}

        {nextPost ? (
          <a href={getPostUrl(nextPost.id)} class="nav-link next">
            <span class="nav-label">
              <span>Next</span>
              <Icon name="material-symbols:arrow-forward" class="nav-icon" />
            </span>
            <span class="nav-title">{nextPost.data.title}</span>
          </a>
        ) : (
          <div class="nav-placeholder"></div>
        )}
      </div>
    </nav>
  )}
</DashboardLayout>

<style>
  .post-navigation {
    width: 100%;
  }

  .nav-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  @media (max-width: 640px) {
    .nav-grid {
      grid-template-columns: 1fr;
    }
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1rem 1.25rem;
    background: var(--card-bg);
    border-radius: var(--radius-large);
    border: 1px solid var(--border-color);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    border-color: oklch(var(--primary));
    background: var(--btn-hover-bg);
  }

  .nav-link.prev {
    align-items: flex-start;
  }

  .nav-link.next {
    align-items: flex-end;
    text-align: right;
  }

  .nav-label {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--text-tertiary);
    font-weight: 500;
  }

  .nav-icon {
    width: 1rem;
    height: 1rem;
  }

  .nav-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
  }

  .nav-placeholder {
    display: none;
  }

  @media (min-width: 641px) {
    .nav-placeholder {
      display: block;
    }
  }
</style>
