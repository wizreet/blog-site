---
/**
 * Post Card Component
 *
 * @description A card component for displaying a blog post preview.
 * Text-first design with prominent title, optional small thumbnail.
 *
 * Features:
 * - Prominent title (text-2xl)
 * - Line-clamp excerpt (2 lines)
 * - Category badge
 * - Tags (limited display)
 * - Date and reading time
 * - Optional series indicator
 * - Optional small thumbnail
 */

import { Icon } from 'astro-icon/components';
import type { CollectionEntry } from 'astro:content';
import { getPostUrl, getCategoryUrl, getTagUrl, getSeriesUrl } from '@utils/url-utils';
import { formatDate, getRelativeTime } from '@utils/date-utils';
import { i18n, I18nKey } from '@i18n/index';

interface Props {
  /** The post entry from content collection */
  post: CollectionEntry<'posts'>;
  /** Whether to show a compact version */
  compact?: boolean;
}

const { post, compact = false } = Astro.props;

const { title, description, published, category, tags, series, image } = post.data;

// Calculate reading time (rough estimate: 200 words per minute)
const wordCount = post.body?.split(/\s+/).length || 0;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));

// Limit tags for display
const displayTags = tags?.slice(0, 3) || [];
const hasMoreTags = (tags?.length || 0) > 3;
---

<article class="card-base group">
  <a href={getPostUrl(post.slug)} class="block p-5">
    <div class:list={['flex gap-4', compact ? 'flex-col sm:flex-row' : 'flex-col']}>
      <!-- Main Content -->
      <div class="flex-1 min-w-0">
        <!-- Category & Series -->
        <div class="mb-2 flex flex-wrap items-center gap-2">
          {
            category && (
              <a
                href={getCategoryUrl(category)}
                class="inline-flex items-center gap-1 rounded-md bg-[oklch(var(--primary)/0.1)] px-2 py-0.5 text-xs font-medium text-[oklch(var(--primary))] transition-colors hover:bg-[oklch(var(--primary)/0.2)]"
                onclick="event.stopPropagation()"
              >
                <Icon name="material-symbols:folder-outline" class="h-3 w-3" />
                {category}
              </a>
            )
          }

          {
            series && (
              <a
                href={getSeriesUrl(series.id)}
                class="inline-flex items-center gap-1 rounded-md bg-[var(--btn-regular-bg)] px-2 py-0.5 text-xs text-[var(--text-secondary)] transition-colors hover:bg-[var(--btn-hover-bg)]"
                onclick="event.stopPropagation()"
              >
                <Icon name="material-symbols:collections-bookmark-outline" class="h-3 w-3" />
                {series.id} #{series.part}
              </a>
            )
          }
        </div>

        <!-- Title -->
        <h2
          class:list={[
            'font-bold text-[var(--text-primary)] transition-colors group-hover:text-[oklch(var(--primary))]',
            compact ? 'text-lg line-clamp-2' : 'text-xl md:text-2xl line-clamp-2',
          ]}
        >
          {title}
        </h2>

        <!-- Description -->
        {
          description && !compact && (
            <p class="mt-2 line-clamp-2 text-[var(--text-secondary)]">
              {description}
            </p>
          )
        }

        <!-- Meta Info -->
        <div class="mt-3 flex flex-wrap items-center gap-x-4 gap-y-1 text-sm text-[var(--text-tertiary)]">
          <!-- Date -->
          <div class="flex items-center gap-1" title={formatDate(published)}>
            <Icon name="material-symbols:calendar-today-outline" class="h-4 w-4" />
            <time datetime={published.toISOString()}>
              {getRelativeTime(published)}
            </time>
          </div>

          <!-- Reading Time -->
          <div class="flex items-center gap-1">
            <Icon name="material-symbols:schedule-outline" class="h-4 w-4" />
            <span>{readingTime} {i18n(I18nKey.minuteRead)}</span>
          </div>
        </div>

        <!-- Tags -->
        {
          displayTags.length > 0 && !compact && (
            <div class="mt-3 flex flex-wrap items-center gap-1.5">
              {displayTags.map((tag) => (
                <a
                  href={getTagUrl(tag)}
                  class="inline-flex items-center gap-0.5 rounded bg-[var(--btn-regular-bg)] px-1.5 py-0.5 text-xs text-[var(--text-tertiary)] transition-colors hover:bg-[var(--btn-hover-bg)] hover:text-[var(--text-secondary)]"
                  onclick="event.stopPropagation()"
                >
                  <span class="opacity-60">#</span>
                  {tag}
                </a>
              ))}
              {hasMoreTags && (
                <span class="text-xs text-[var(--text-tertiary)]">
                  +{(tags?.length || 0) - 3}
                </span>
              )}
            </div>
          )
        }
      </div>

      <!-- Thumbnail (optional, small) -->
      {
        image && !compact && (
          <div class="shrink-0">
            <img
              src={image}
              alt={title}
              class="h-24 w-24 rounded-lg object-cover md:h-28 md:w-28"
              loading="lazy"
            />
          </div>
        )
      }
    </div>
  </a>
</article>
