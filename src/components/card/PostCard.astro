---
/**
 * Post Card Component
 *
 * @description A card component for displaying a blog post preview.
 * Designed to match Fuwari's elegant post card styling.
 */

import { Icon } from 'astro-icon/components';
import type { CollectionEntry } from 'astro:content';
import { getPostUrl, getSeriesUrl } from '@utils/url-utils';
import { formatDate } from '@utils/date-utils';
import { i18n, I18nKey } from '@i18n/index';

interface Props {
  /** The post entry from content collection */
  post: CollectionEntry<'posts'>;
  /** Animation delay for staggered loading */
  style?: string;
  /** Additional class */
  class?: string;
}

const { post, style = '', class: className = '' } = Astro.props;

const { title, description, published, updated, category, tags, series, image } = post.data;

// Calculate reading time (rough estimate: 200 words per minute)
const wordCount = post.body?.split(/\s+/).length || 0;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));

// Check if has cover image
const hasCover = image !== undefined && image !== null && image !== '';
const coverWidth = '28%';
---

<div 
  class:list={[
    'card-base flex flex-col-reverse md:flex-col w-full rounded-[var(--radius-large)] overflow-hidden relative',
    className
  ]} 
  style={style}
>
  <div 
    class:list={[
      'pl-6 md:pl-9 pr-6 md:pr-2 pt-6 md:pt-7 pb-6 relative',
      { 'w-full md:w-[calc(100%_-_52px_-_12px)]': !hasCover },
      { 'w-full md:w-[calc(100%_-_var(--coverWidth)_-_12px)]': hasCover }
    ]}
  >
    <!-- Title -->
    <a 
      href={getPostUrl(post.id)}
      class="transition group w-full block font-bold mb-3 text-2xl md:text-3xl text-[var(--text-primary)]
             hover:text-[oklch(var(--primary))] active:text-[oklch(var(--primary)/0.8)]
             before:w-1 before:h-5 before:rounded-md before:bg-[oklch(var(--primary))]
             before:absolute before:top-[35px] before:left-[18px] before:hidden md:before:block"
    >
      {title}
      <Icon 
        class="inline text-[2rem] text-[oklch(var(--primary))] md:hidden translate-y-0.5 absolute" 
        name="material-symbols:chevron-right-rounded" 
      />
      <Icon 
        class="text-[oklch(var(--primary))] text-[2rem] transition hidden md:inline absolute translate-y-0.5 opacity-0 group-hover:opacity-100 -translate-x-1 group-hover:translate-x-0" 
        name="material-symbols:chevron-right-rounded"
      />
    </a>

    <!-- Metadata -->
    <div class="flex flex-wrap items-center gap-4 mb-4 text-sm text-[var(--text-tertiary)]">
      {/* Date */}
      <div class="flex items-center gap-1.5">
        <Icon name="material-symbols:calendar-today-outline" class="w-4 h-4" />
        <time datetime={published.toISOString()}>{formatDate(published)}</time>
      </div>

      {/* Category */}
      {category && (
        <div class="flex items-center gap-1.5">
          <Icon name="material-symbols:folder-outline" class="w-4 h-4" />
          <span>{category}</span>
        </div>
      )}

      {/* Tags (limited to first 2) */}
      {tags && tags.length > 0 && (
        <div class="hidden md:flex items-center gap-1.5">
          <Icon name="material-symbols:tag" class="w-4 h-4" />
          <span>{tags.slice(0, 2).join(', ')}{tags.length > 2 ? '...' : ''}</span>
        </div>
      )}
    </div>

    <!-- Description -->
    <div class:list={['transition text-[var(--text-secondary)] mb-3.5 pr-4 leading-relaxed', { 'line-clamp-2 md:line-clamp-1': !description }]}>
      {description || 'No description available'}
    </div>

    <!-- Word count and read time -->
    <div class="text-sm text-[var(--text-tertiary)] opacity-60 flex gap-4 transition">
      <div>
        {wordCount} {i18n(wordCount === 1 ? I18nKey.wordCount : I18nKey.wordsCount)}
      </div>
      <div>|</div>
      <div>
        {readingTime} {i18n(readingTime === 1 ? I18nKey.minuteCount : I18nKey.minutesCount)}
      </div>
    </div>
  </div>

  {/* Cover Image */}
  {hasCover && (
    <a 
      href={getPostUrl(post.id)} 
      aria-label={title}
      class:list={[
        'group',
        'max-h-[20vh] md:max-h-none mx-4 mt-4 -mb-2 md:mb-0 md:mx-0 md:mt-0',
        'md:w-[var(--coverWidth)] relative md:absolute md:top-3 md:bottom-3 md:right-3 rounded-xl overflow-hidden active:scale-95'
      ]}
    >
      <div class="absolute pointer-events-none z-10 w-full h-full group-hover:bg-black/30 group-active:bg-black/50 transition"></div>
      <div class="absolute pointer-events-none z-20 w-full h-full flex items-center justify-center">
        <Icon 
          name="material-symbols:chevron-right-rounded"
          class="transition opacity-0 group-hover:opacity-100 scale-50 group-hover:scale-100 text-white text-5xl"
        />
      </div>
      <img
        src={typeof image === 'string' ? image : image.src}
        alt={`Cover Image of ${title}`}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </a>
  )}

  {/* Enter button when no cover */}
  {!hasCover && (
    <a 
      href={getPostUrl(post.id)} 
      aria-label={title} 
      class="!hidden md:!flex btn-regular w-[3.25rem]
             absolute right-3 top-3 bottom-3 rounded-xl bg-[var(--btn-regular-bg)]
             hover:bg-[var(--btn-regular-bg-hover)] active:bg-[var(--btn-regular-bg-active)] active:scale-95
             items-center justify-center"
    >
      <Icon 
        name="material-symbols:chevron-right-rounded"
        class="transition text-[oklch(var(--primary))] text-4xl"
      />
    </a>
  )}
</div>

<!-- Mobile separator -->
<div class="transition border-t-[1px] border-dashed mx-6 border-black/10 dark:border-white/[0.15] last:border-t-0 md:hidden"></div>

<style define:vars={{ coverWidth }}>
  .card-base {
    background: var(--card-bg);
    transition: all 0.2s ease;
  }

  .card-base:hover {
    box-shadow: 0 4px 20px oklch(var(--primary) / 0.1);
  }
</style>
